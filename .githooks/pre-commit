#!/bin/sh
#---------------------------------#
#  pre-requirements configuration #
#---------------------------------#

echo -e
echo -e "========================================"
echo -e "Pre-requirements"
echo -e "========================================"
echo -e
dotnet tool install --global Cake.Tool --version 0.33.0


#---------------------------------#
#      pipeline configuration     #
#---------------------------------#

dotnet cake || exit 1
echo -e
echo -e "========================================"
echo -e "Commit"
echo -e "========================================"
echo -e
